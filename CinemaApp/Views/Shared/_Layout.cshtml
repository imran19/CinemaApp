<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["Role"] != null)
                {
                    if (Session["Role"].Equals(250))
                    {
                        <a class="navbar-brand" onclick="autoLogout()" href="~/Account/AdminPanel">Riba CINEMA</a>
                    }
                    else
                    {
                        <a class="navbar-brand" onclick="autoLogout()" href="~/Account/Homepage">Riba CINEMA</a>
                    }
                    <a class="navbar-brand" href="~/Account/Logout">Logout</a>
                }
                else
                {
                    <a class="navbar-brand" href="Account/Login">Login</a>
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:15px;">
        @RenderBody()
    </div>

    <footer style="margin-left:30px;">
        <p>&copy; @DateTime.Now.Year -Riba Cinema - Time: @DateTime.Now.Hour:@DateTime.Now.Minute</p>
    </footer>
</body>
</html>